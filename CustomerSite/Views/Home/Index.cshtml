@model IList<Shared.ProductVm>

@{
    ViewData["Title"] = "Home Page";
}
<div class="products">
    @foreach (var product in Model)
    {
        var base64 = Convert.ToBase64String(product.Image);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        <a class="card" href='@Url.Action("Detail","Home",new {id=@product.Id})'>
            <p>@product.Name</p>
            <img src="@imgSrc" asp-append-version="true"/>
            <span>Price: <b>@product.Price</b> VND</span>
        </a>
    }
</div>