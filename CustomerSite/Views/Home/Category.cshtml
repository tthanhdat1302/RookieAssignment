@model IEnumerable<Shared.ProductVm>

@{
    ViewData["Title"] = "Category Page";
}
<div class="products">
    @foreach (var product in Model)
    {
        var imgSrc="~/images/noImage.jpg";
        if(product.Image!=null)
        {
            var base64 = Convert.ToBase64String(product.Image);
            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }
       <div class="card">
            <p>@product.Name</p>
            <a asp-action="Detail" asp-controller="Home" asp-route-id='@product.Id'>
                <img src="@imgSrc" asp-append-version="true" id="productImg" />
            </a>
            <span>Price: <b>@product.Price</b> VND 
                <a asp-action="Buy" asp-controller="Cart" asp-route-id="@product.Id">
                    <img src="~/images/cart.png" width="30px" height="30px">
                </a>
            </span>
        </div>
    }
</div>