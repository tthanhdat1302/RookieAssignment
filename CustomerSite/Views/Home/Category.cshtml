@model IList<Shared.ProductVm>

@{
    ViewData["Title"] = "Category Page";
}
<div class="products">
    @foreach (var product in Model)
    {
        if(product.CategoryId==ViewBag.cateId)
        {
        var photoPath="~/images/"+(@product.Image??"noImage.jpg");
        <a class="card" href='@Url.Action("Detail","Home",new {id=@product.Id})'>
            <p>@product.Name</p>
            <img src="@photoPath" asp-append-version="true"/>
            <span>Price: <b>@product.Price</b> VND</span>
        </a>
        }
    }
</div>